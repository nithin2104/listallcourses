{{!
    @template block_listallcourses/main

    ToDo item template.

    Renders a courses. See template block_listallcourses/content for details.
}}

{{#all}}
<div class="filter">
  <span>{{#pix}} i/course, core {{/pix}}{{#str}}coursetype, block_listallcourses{{/str}}</span>
  <select name="status" id="status">
    <option value="1">All</option>
    <option value="2">My courses</option>
  </select>
</div>
<div class="mytable table-responsive no-overflow">
<table class="generaltable myclass">
  <thead>
    <tr>
      <th>{{#str}}courseid, block_listallcourses{{/str}}</th>
      <th>{{#str}}coursename, block_listallcourses{{/str}}</th>
      <th>{{#str}}enroled, block_listallcourses{{/str}}</th>
      <th>{{#str}}coursecompleted, block_listallcourses{{/str}}</th>
    </tr>
  </thead>
  <tbody>
    {{#records}}
    <tr>
      <td>{{ id }}</td>
      <td> <a href="\moodle\course\view.php?id={{id}}">{{ fullname }}</a></td>
      <td>{{ enroled }}</td>
      <td>{{ c_completed }}</td>
    </tr>
    {{/records}}
  </tbody>
</table>
</div>
{{/all}}

{{#course}}
<div class="mytable table-responsive no-overflow">
    <table class="generaltable myclass">
      <thead>
        <tr>
          <th>{{#str}}activityname, block_listallcourses{{/str}}</th>
          <th>{{#str}}no_of_instances, block_listallcourses{{/str}}</th>
          <th>{{#str}}noofcompletions, block_listallcourses{{/str}}</th>
        </tr>
      </thead>
      <tbody>
        {{#records}}
        <tr>
          <td>{{ name }}</td>
          <td>{{ no_of_instances }}</td>
          <td>{{ c_completions }}</td>
        </tr>
        {{/records}}
      </tbody>
    </table>
</div>
{{/course}}

{{#module}}
<div class="mytable table-responsive no-overflow">
    <table class="generaltable myclass">
      <thead>
        <tr>
          <th>{{#str}}activityname, block_listallcourses{{/str}}</th>
          <th>{{#str}}completionstate, block_listallcourses{{/str}}</th>
          <th>{{#str}}securedgrade, block_listallcourses{{/str}}</th>
          <th>{{#str}}maxgrade, block_listallcourses{{/str}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ name }}</td>
          <td>{{ completionstate }}</td>
          <td>{{ rawgrade }}</td>
          <td>{{ rawgrademax }}</td>
        </tr>
      </tbody>
    </table>
</div>
{{/module}}
